---
interface Props {
  classes?: string;
  reverse?: boolean;
};

const { classes, reverse } = Astro.props;
---

<div class=`grid grid-rows-4 h-10 ${ reverse && '-scale-y-100' } ${classes}`>
    <div class="bg-teal"></div>
    <div class="bg-light"></div>
    <div class="bg-orange"></div>
    <div class="bg-red"></div>
  </div>